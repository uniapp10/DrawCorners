<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/v_line_left1"
            android:layout_height="0dp"
            android:layout_width="1dp"
            android:layout_marginRight="20dp"
            android:background="@color/txtBlue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_content_title_3"
            app:layout_constraintRight_toRightOf="@id/tv_top_title_number"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_top_title_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/trade_initial_view_bg"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/txtWhite"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_content_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="风险评测"
            android:textAlignment="textStart"
            android:textColor="@color/txtBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_title_number"
            app:layout_constraintLeft_toRightOf="@+id/tv_top_title_number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_title_number" />

        <TextView
            android:id="@+id/tv_content_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="贵金属延期业务属于高风险投资，请确保您的风险能力符合要求。"
            android:textAlignment="textStart"
            android:textColor="@color/txtBlack"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_content_title_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_title_1" />

        <TextView
            android:id="@+id/tv_top_title_number2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/trade_initial_view_bg"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/txtWhite"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_1"/>

        <TextView
            android:id="@+id/tv_content_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="资料提交及验证"
            android:textAlignment="textStart"
            android:textColor="@color/txtBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_title_number2"
            app:layout_constraintLeft_toRightOf="@+id/tv_top_title_number2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_title_number2" />

        <TextView
            android:id="@+id/tv_content_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="请准备好本人身份证件、银行借记卡、手机。"
            android:textAlignment="textStart"
            android:textColor="@color/txtBlack"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_content_title_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_title_2" />

        <TextView
            android:id="@+id/tv_top_title_number3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/trade_initial_view_bg"
            android:text="3"
            android:gravity="center"
            android:textColor="@color/txtWhite"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content_2"/>

        <TextView
            android:id="@+id/tv_content_title_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="开户完成"
            android:textAlignment="textStart"
            android:textColor="@color/txtBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_title_number3"
            app:layout_constraintLeft_toRightOf="@+id/tv_top_title_number3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_title_number3" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/txtBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.账户预计2个交易日内开通，请留意手机短信，开户成功后即可入金交易"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/txtBlack"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.初始交易密码和资金密码，均为身份证后6位"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/txtBlack"/>

    <TextView
        android:id="@+id/tv_kaihu"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="立即开户"
        android:textColor="@color/txtWhite"
        android:gravity="center"
        android:background="@drawable/trade_button_bg"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已有账号?"
            android:textColor="@color/txtBlack"/>
        <TextView
            android:id="@+id/tv_binding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请绑定交易账号"
            android:layout_marginLeft="20dp"
            android:textColor="@color/txtBlue"/>
    </LinearLayout>
</LinearLayout>