<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhudongdong.drawcorners.MainActivity">


    <customViews.TitleView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/title_main"
        title:title_name="标题"
        title:title_text_color="@color/txtBlack"
        title:left_text="左边"
        title:title_text_size="14dp"
        title:small_text_size="12dp"
        title:left_text_drawable_left="@mipmap/trade_analysis"
        ></customViews.TitleView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/red_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click me ~"
            android:background="@drawable/red_bg"
            android:clickable="true"/>
    </RelativeLayout>

</LinearLayout>
